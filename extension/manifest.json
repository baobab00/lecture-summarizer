{
  "manifest_version": 3,
  "name": "Lecture Summarizer",
  "version": "1.0.0",
  "description": "Summarize lecture videos using GPT-4",
  "icons": {
    "128": "icon128.png"
  },
  "permissions": ["activeTab", "scripting", "tabs", "downloads", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "128": "icon128.png"
    },
    "default_title": "Lecture Summarizer 설정"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}
